# ===========================================
# DULCESPEDIDOS ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values

# ------------------------------
# DATABASE (Neon)
# ------------------------------
# Get this from your Neon console
DATABASE_URL="postgresql://username:password@host.neon.tech/dulcespedidos?sslmode=require"

# ------------------------------
# AUTH (Better Auth)
# ------------------------------
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-key-min-32-chars-here"
# Your app URL (e.g., http://localhost:3000 or your production URL)
BETTER_AUTH_URL="http://localhost:3000"

# ------------------------------
# CLOUDFLARE R2 (File Storage)
# ------------------------------
# Get these from your Cloudflare R2 dashboard
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="dulcespedidos"
R2_ACCOUNT_ID="your-cloudflare-account-id"
# Public URL for R2 (e.g., https://pub-your-domain.r2.dev)
R2_PUBLIC_URL="https://pub-your-domain.r2.dev"

# ------------------------------
# APP CONFIG
# ------------------------------
NODE_ENV="development"
